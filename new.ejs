<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">New Event</div>
	<form class="ui form" action="/events" method="POST">
		
		<div class="field">
			<label>Event Name</label>
			<input type="text" name="newEvent[name]" placeholder="Name of the Event">
		</div>
		
		<div class="field">
			<label>Location</label>
			<input type="text" name="newEvent[location_name]" placeholder="Location">
		</div>
		
		<div class="field">
			<label>Date</label>
			<input type="text" name="newEvent[date]" placeholder="Date">
		</div>
		
		<div class="field">
			<label>Time</label>
			<input type="text" name="newEvent[time]" placeholder="Time">
		</div>
		
		<div class="field">
			<label>Image</label>
			<input type="text" name="newEvent[image]" placeholder="Image URL">
		</div>
	
		<div class="field">
			<label>Type</label>
			<input type="number" name="newEvent[type]" placeholder="Type (Public = 0, Private = 1)">
		</div>
		
		<input type="hidden" id="admin_id" name="newEvent[admin_id]" value="0">
		
